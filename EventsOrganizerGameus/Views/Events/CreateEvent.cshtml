@model OA.CQRS.Commands.Event.Create.CreateEventCommand

<form asp-action="CreateEvent" asp-controller="Events">
    <div class="card">
        <div class="col-md-12">
            <h2 class="card-title">Events</h2>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="card">
        <div class="col-md-12">
            <h2 class="card-title">Image</h2>
            <div class="form-group">
                <div class="form-group">
                    <div class="col-md-12">
                        <label asp-for="ImageUrlPath" class="control-label"></label>
                        <input asp-for="ImageUrlPath" class="form-control" />
                        <span asp-validation-for="ImageUrlPath" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="card">
        <div class="col-md-12">
            <h2 class="card-title">Category</h2>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" asp-items="@Model.CategoryIds">
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="card">
        <div class="col-md-12">
            <h2 class="card-title">Address</h2>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="Address.Country" class="control-label"></label>
                    <input asp-for="Address.Country" class="form-control" />
                    <span asp-validation-for="Address.Country" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Address.City" class="control-label"></label>
                    <input asp-for="Address.City" class="form-control" />
                    <span asp-validation-for="Address.City" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Address.Location" class="control-label"></label>
                    <input asp-for="Address.Location" class="form-control" />
                    <span asp-validation-for="Address.Location" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary btn-search">
                Insert
            </button>
        </div>
    </div>
</form>